{% extends 'base.html.twig' %}
{% block body %}
    <a href="{{ path('admin_product_new') }}" class="btn btn-primary pull-right">
        Create <span class="fa fa-plus-circle"></span>
    </a>
    <h1>All Products</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
			<th>Image</th>

            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
				{% if product.image is not null %}
				 <td><img class="img-responsive" src="{{ asset(product.image.webPath) }}" width="50px", height="50px, /></td>
				 {% endif %}
				<br /> 

               
                <td>
                    <a href="{{ path('admin_product_edit', {slug: product.slug
                    }) }}">Update
                        <span class="fa fa-pencil"></span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_product_delete', {slug: product.slug
                    }) }}">Delete
                        <span class="fa fa-trash-o"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}